<?xml version='1.0' encoding='utf-8'?>
<widget id="com.siab.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>app</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
	
	<plugin name="cordova-plugin-app-name" spec ="^1.0.6" >
	 <variable name="APP_NAME" value="Safety in a Box" />
	</plugin>
    <plugin name="cordova-plugin-appversion" spec="^1.0.0"/>
    <plugin name="cordova-plugin-file" spec="^6.0.1"/>
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1"/>
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0"/>
    <plugin name="cordova-plugin-screen-locker" spec="^0.2.2"/>
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.2"/>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.3"/>
    <plugin name="cordova-plugin-statusbar" spec="^2.4.3"/>
	
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
